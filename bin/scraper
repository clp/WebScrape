#! /usr/bin/env perl

use strict;
use warnings;

use Getopt::Long;
use WWW::Mechanize;

our $VERSION = '0.01';

my $prog = $0;
$prog =~ s{\A.*/}{};    # strip leading path, if any

my $url;
unless ( GetOptions( 'url=s' => \$url, ) ) {
    die usage();
}
unless ($url) {
    die "$prog died: No url found on command line.\n\n", usage();
}

my $mech = WWW::Mechanize->new();
$mech->agent_alias('Linux Mozilla');
$mech->get($url);
my $output_page = $mech->content();

my $out;
my $outfile = "out.html";

open( $out, '>', $outfile );
print {$out} "$output_page";
close($out);

exit 1;

sub usage {
    return <<"eousage";
Usage:
  $prog -u url

$prog requests a web site to return a page, and displays the HTML
data found there.

Options to control the query

-url string              The full http address to retrieve.
                         Required.
eousage
}

=begin notes

=end notes

=cut

